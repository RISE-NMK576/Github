@model Netflixx.Models.FilmsModel
@{
    ViewData["Title"] = "Thêm Phim Mới";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/filmmanager.css">
    <link rel="stylesheet" href="~/css/film.css">

    <style>
        /* Modal styles */
        .modal-content {
            border: 1px solid #444;
        }

        .modal-header, .modal-footer {
            border-color: #444;
        }

        .modal-body {
            padding: 20px;
        }

        .bg-success {
            background-color: #28a745 !important;
            border-color: #28a745 !important;
        }

        .bg-danger {
            background-color: #dc3545 !important;
            border-color: #dc3545 !important;
        }

        .btn-close-white {
            filter: invert(1) grayscale(100%) brightness(200%);
        }

        .film-list-card-header {
            position: relative;
            padding: 1rem;
            background-color: #ff4d6d !important;
            color: white !important;
        }

        .main-conten {
            padding: 1rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/image/logo/NetflixxLogo.png" alt="Netflixx Logo" style="height:40px;" />
            </a>
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Film" asp-action="Index">Search</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Film" asp-action="Type">Films</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="FilmController1" asp-action="Index">List</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Series</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Categories</a></li>
            </ul>
            <span class="navbar-text me-3">Noti</span>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle p-0" href="#" role="button"
                   id="avatarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@ViewBag.AvatarUrl" class="avatar-trigger" alt="User avatar" />
                </a>
                <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="avatarDropdown">
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Profile">Profile</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="History">History</a></li>
                    <li><button class="dropdown-item" type="button">Settings</button></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="dropdown-item">Sign out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="film-list-sidebar" id="filmListSidebar">
        <div>
            <a class="d-flex align-items-center justify-content-center gap-1 text-decoration-none">
                MENU
            </a>
            <a asp-action="Search"><i class="fas fa-filter"></i> Tìm kiếm & Lọc</a>
            <a asp-action="Index"><i class="fas fa-list"></i> Danh sách phim</a>
            <a asp-action="Create" class="active"><i class="fas fa-plus"></i> Thêm phim mới</a>
            <a asp-action="History"><i class="fas fa-history"></i> Lịch sử chỉnh sửa</a>
            <a asp-action="Trash"><i class="fas fa-trash-alt"></i> Thùng rác</a>
        </div>
    </div>

    <!-- Sidebar Toggle Buttons -->
    <div>
        <button id="filmListToggleSidebar" class="film-list-toggle-btn">
            <i class="fas fa-angle-double-left"></i>
        </button>
        <button id="filmListShowSidebar" class="film-list-show-sidebar-btn">
            <i class="fas fa-angle-double-right"></i>
        </button>
    </div>

    <!-- Main Content -->
    <div class="film-list-main-content" id="filmListMainContent">
        <div class="film-list-card shadow">
            <div class="film-list-card-header d-flex justify-content-center align-items-center">
                <strong class="fs-3"><i class="fas fa-plus-circle me-2"></i>THÊM PHIM MỚI</strong>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Form thêm phim -->
                <div class="mb-5 main-conten">
                    <h5 class="mb-3">Thông tin phim</h5>
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="filmForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label"></label>
                                <input asp-for="Title" class="form-control bg-dark text-light" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReleaseDate" class="form-label"></label>
                                <input asp-for="ReleaseDate" type="date" class="form-control bg-dark text-light" />
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Genre" class="form-label"></label>
                                <input asp-for="Genre" class="form-control bg-dark text-light" />
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Duration" class="form-label"></label>
                                <input asp-for="Duration" type="number" class="form-control bg-dark text-light" min="1" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control bg-dark text-light" min="0" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RatingValue" class="form-label"></label>
                                <select asp-for="RatingValue" class="form-select bg-dark text-light">
                                    <option value="P">P - Mọi lứa tuổi</option>
                                    <option value="C13">C13 - Trên 13 tuổi</option>
                                    <option value="C16">C16 - Trên 16 tuổi</option>
                                    <option value="C18">C18 - Trên 18 tuổi</option>
                                </select>
                                <span asp-validation-for="RatingValue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select bg-dark text-light">
                                    <option value="Active">Đang chiếu</option>
                                    <option value="Upcoming">Sắp chiếu</option>
                                    <option value="Inactive">Ngừng chiếu</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <!-- Hidden field for Rating with default value 0 -->
                                <input type="hidden" asp-for="Rating" value="0" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control bg-dark text-light" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Director" class="form-label"></label>
                                <input asp-for="Director" class="form-control bg-dark text-light" />
                                <span asp-validation-for="Director" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Actors" class="form-label"></label>
                                <input asp-for="Actors" class="form-control bg-dark text-light" />
                                <span asp-validation-for="Actors" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Poster (URL hoặc tải lên)</label>
                                <input type="text" asp-for="PosterUrl" class="form-control bg-dark text-light mb-2" placeholder="Nhập URL poster">
                                <span asp-validation-for="PosterUrl" class="text-danger"></span>
                                <span class="text-center d-block">hoặc</span>
                                <input type="file" name="posterFile" class="form-control bg-dark text-light mt-2" accept="image/*">
                                <small class="text-muted">Chọn một trong hai phương thức trên</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Trailer URL</label>
                                <input type="text" asp-for="TrailerUrl" class="form-control bg-dark text-light">
                                <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Film URL</label>
                                <input type="text" asp-for="FilmURL" class="form-control bg-dark text-light">
                                <span asp-validation-for="FilmURL" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn film-list-btn-primary">
                            <i class="fas fa-plus-circle"></i> Thêm phim
                        </button>
                    </form>
                </div>

                <!-- Thêm bằng file -->
                <div class="mt-5 pt-4 border-top main-conten">
                    <h5 class="mb-3">Thêm phim từ file (Excel hoặc .exe)</h5>
                    <form action="/Film/Import" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Chọn file</label>
                            <input type="file" name="FileUpload" class="form-control bg-dark text-light" accept=".xlsx,.xls,.csv,.exe" required>
                        </div>
                        <button type="submit" class="btn film-list-btn-success">
                            <i class="fas fa-file-import"></i> Tải lên và thêm phim
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Thông báo -->
    <div class="modal fade" id="notificationModal" tabindex="-1" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="notificationModalLabel">Thông báo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="notificationModalBody">
                    <!-- Nội dung thông báo sẽ được điền ở đây -->
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn film-list-btn-primary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            // Xử lý sidebar toggle
            $('#filmListToggleSidebar').click(function () {
                $('#filmListSidebar').addClass('collapsed');
                $('#filmListMainContent').addClass('expanded');
                $('#filmListShowSidebar').show();
            });

            $('#filmListShowSidebar').click(function () {
                $('#filmListSidebar').removeClass('collapsed');
                $('#filmListMainContent').removeClass('expanded');
                $('#filmListShowSidebar').hide();
            });

            // Hiển thị thông báo từ TempData hoặc ModelState
            function showNotification(message, isSuccess) {
                $('#notificationModalBody').html(message);
                $('#notificationModal').modal('show');

                var modalContent = $('#notificationModal .modal-content');
                modalContent.removeClass('bg-success bg-danger');

                if (isSuccess) {
                    modalContent.addClass('bg-success');
                    $('#filmForm')[0].reset(); // Reset form sau khi thành công
                } else {
                    modalContent.addClass('bg-danger');
                }
            }

            // Kiểm tra và hiển thị thông báo từ TempData
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                showNotification(successMessage, true);
            }

            // Kiểm tra và hiển thị lỗi từ ModelState
            @if (!ViewData.ModelState.IsValid)
            {
                    <text>
                    var errorMessage = '';
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                            <text>errorMessage += '@Html.Raw(error.ErrorMessage.Replace("'", "\\'"))<br>';</text>
                    }
                    showNotification(errorMessage, false);
                    </text>
            }

            // Tự động focus vào trường đầu tiên có lỗi
            var firstError = $('.field-validation-error').first();
            if (firstError.length) {
                $('html, body').animate({
                    scrollTop: firstError.closest('.mb-3').offset().top - 100
                }, 500);
                firstError.closest('.mb-3').find('input, select, textarea').focus();
            }

            // Xử lý khi form submit
            $('#filmForm').on('submit', function () {
                if (!$(this).valid()) {
                    var firstError = $('.field-validation-error').first();
                    if (firstError.length) {
                        $('html, body').animate({
                            scrollTop: firstError.closest('.mb-3').offset().top - 100
                        }, 500);
                        firstError.closest('.mb-3').find('input, select, textarea').focus();
                    }
                    return false;
                }
                return true;
            });
        });
    </script>
</body>
</html>