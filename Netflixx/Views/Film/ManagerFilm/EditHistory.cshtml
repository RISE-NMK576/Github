@using Netflixx.Models
@using Newtonsoft.Json
@model IEnumerable<FilmsModel>

@{
    ViewData["Title"] = "Lịch sử chỉnh sửa";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="/css/filmmanager.css" />
    <link rel="stylesheet" href="~/css/film.css" />

    <style>
        .film-list-card-header {
            position: relative;
            padding: 1rem;
        }

        .dataTables_wrapper .top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .dataTables_wrapper .bottom {
            display: flex;
            justify-content: flex-start;
            margin-top: 1rem;
        }

        .modal-body {
            max-height: 70vh;
            overflow-y: auto;
        }

        .price-column {
            text-align: right;
            white-space: nowrap;
        }

        .main-content {
            padding: 0.5rem;
        }

        /* Thêm vào phần style */
        .bg-success {
            background-color: #28a745 !important;
        }
        /* Xanh lá */
        .bg-primary {
            background-color: #007bff !important;
        }
        /* Xanh dương */
        .bg-warning {
            background-color: #ffc107 !important;
            color: #212529 !important;
        }
        /* Vàng */
        .bg-danger {
            background-color: #dc3545 !important;
        }
        /* Đỏ */
        <style >
        /* ... các style khác giữ nguyên ... */
        /* Màu sắc cho các badge */
        .film-list-badge-success {
            background-color: #28a745 !important; /* Xanh lá - Tạo mới */
            color: white !important;
        }

        .film-list-badge-warning {
            background-color: #ffc107 !important; /* Vàng - Chỉnh sửa */
            color: #212529 !important;
        }

        .film-list-badge-danger {
            background-color: #dc3545 !important; /* Đỏ - Xóa */
            color: white !important;
        }

        .film-list-badge-info {
            background-color: #17a2b8 !important; /* Xanh dương - Khôi phục */
            color: white !important;
        }

        .film-list-badge-secondary {
            background-color: #6c757d !important; /* Xám - Mặc định */
            color: white !important;
        }
    </style>

    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/image/logo/NetflixxLogo.png" alt="Netflixx Logo" style="height:40px;" />
            </a>
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Film" asp-action="Index">Search</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Film" asp-action="Type">Films</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="FilmController1" asp-action="Index">List</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Series</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Categories</a></li>
            </ul>
            <span class="navbar-text me-3">Noti</span>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle p-0" href="#" role="button" id="avatarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@ViewBag.AvatarUrl" class="avatar-trigger" alt="User avatar" />
                </a>
                <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="avatarDropdown">
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Profile">Profile</a></li>
                    <li><a class="dropdown-item" asp-controller="Home" asp-action="History">History</a></li>
                    <li><button class="dropdown-item" type="button">Settings</button></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="dropdown-item">Sign out</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="film-list-sidebar" id="filmListSidebar">
        <div>
            <a class="d-flex align-items-center justify-content-center gap-1 text-decoration-none">MENU</a>
            <a asp-action="Search"><i class="fas fa-filter"></i> Tìm kiếm & Lọc</a>
            <a asp-action="Index"><i class="fas fa-list"></i> Danh sách phim</a>
            <a asp-action="Create" class="active"><i class="fas fa-plus"></i> Thêm phim mới</a>
            <a asp-action="History"><i class="fas fa-history"></i> Lịch sử chỉnh sửa</a>
            <a asp-action="Trash"><i class="fas fa-trash-alt"></i> Thùng rác</a>
        </div>
    </div>

    <!-- Sidebar Toggle Buttons -->
    <div>
        <button id="filmListToggleSidebar" class="film-list-toggle-btn">
            <i class="fas fa-angle-double-left"></i>
        </button>
        <button id="filmListShowSidebar" class="film-list-show-sidebar-btn">
            <i class="fas fa-angle-double-right"></i>
        </button>
    </div>

    <!-- Main Content -->
    <div class="film-list-main-content" id="filmListMainContent">
        <div class="film-list-card shadow">
            <div class="film-list-card-header d-flex justify-content-center align-items-center">
                <strong class="fs-3"><i class="fas fa-history me-2"></i>LỊCH SỬ CHỈNH SỬA</strong>
            </div>
            <div class="card-body main-content">
                <!-- Search Form -->
                <form method="get" asp-action="History" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Tìm kiếm</label>
                                <input type="text" class="form-control bg-dark text-light" name="searchKeyword"
                                       placeholder="Tìm theo phim hoặc người dùng" value="@Context.Request.Query["searchKeyword"]">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Hành động</label>
                                <select class="form-select bg-dark text-light" name="actionType">
                                    <option value="">Tất cả hành động</option>
                                    <option value="Update" selected="@(Context.Request.Query["actionType"] == "Update")">Chỉnh sửa</option>
                                    <option value="Create" selected="@(Context.Request.Query["actionType"] == "Create")">Tạo mới</option>
                                    <option value="Delete" selected="@(Context.Request.Query["actionType"] == "Delete")">Xoá</option>
                                    <option value="Restore" selected="@(Context.Request.Query["actionType"] == "Restore")">Khôi phục</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="form-label">Từ ngày</label>
                                <input type="date" class="form-control bg-dark text-light" name="fromDate"
                                       value="@Context.Request.Query["fromDate"]">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="form-label">Đến ngày</label>
                                <input type="date" class="form-control bg-dark text-light" name="toDate"
                                       value="@Context.Request.Query["toDate"]">
                            </div>
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn film-list-btn-primary w-100">
                                <i class="fas fa-search me-1"></i> Lọc
                            </button>
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <a href="@Url.Action("History")" class="btn film-list-btn-secondary w-100">
                                <i class="fas fa-times me-1"></i> Xóa
                            </a>
                        </div>
                    </div>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info alert-dismissible fade show">
                        @ViewBag.Message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- History list -->
                <div class="table-responsive">
                    <table class="table film-list-table table-striped table-bordered" id="dataTable">
                        <thead>
                            <tr>
                                <th width="5%">STT</th>
                                <th width="20%">Tên phim</th>
                                <th width="15%">Hành động</th>
                                <th width="15%">Người chỉnh sửa</th>
                                <th width="15%">Thời gian</th>
                                <th width="10%">Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@record.Title</td>
                                    <td>
                                        @switch (record.LastAction)
                                        {
                                            case "Create":
                                                <span class="badge film-list-badge-success">Tạo mới</span>
                                                break;
                                            case "Update":
                                                <span class="badge film-list-badge-warning">Chỉnh sửa</span>
                                                break;
                                            case "Delete":
                                                <span class="badge film-list-badge-danger">Xoá</span>
                                                break;
                                            case "Restore":
                                                <span class="badge film-list-badge-info">Khôi phục</span>
                                                break;
                                            default:
                                                <span class="badge film-list-badge-secondary">@record.LastAction</span>
                                                break;
                                        }
                                    </td>
                                    <td>@record.ModifiedBy</td>
                                    <td>@record.ModificationDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">
                                        <button class="btn film-list-btn-info" data-bs-toggle="modal" data-bs-target="#detailModal-@record.Id">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal chi tiết -->
    @foreach (var record in Model)
    {
        <div class="modal fade" id="detailModal-@record.Id" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content film-list-modal-content">
                    <div class="modal-header film-list-card-header">
                        <h5 class="modal-title"><i class="fas fa-info-circle me-2"></i>Chi tiết thay đổi - @record.Title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <p><strong>Hành động:</strong></p>
                                @switch (record.LastAction)
                                {
                                    case "Create":
                                        <span class="badge film-list-badge-success">Tạo mới</span>
                                        break;
                                    case "Update":
                                        <span class="badge film-list-badge-warning">Chỉnh sửa</span>
                                        break;
                                    case "Delete":
                                        <span class="badge film-list-badge-danger">Xoá</span>
                                        break;
                                    case "Restore":
                                        <span class="badge film-list-badge-info">Khôi phục</span>
                                        break;
                                    default:
                                        <span class="badge film-list-badge-secondary">@record.LastAction</span>
                                        break;
                                }
                            </div>
                            <div class="col-md-4">
                                <p><strong>Người thực hiện:</strong> @record.ModifiedBy</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Thời gian:</strong> @record.ModificationDate?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h5><i class="fas fa-film me-2"></i>Thông tin phim</h5>
                            <div class="table-responsive">
                                <table class="table film-list-table table-bordered">
                                    <tbody>
                                        <tr>
                                            <td><strong>Tiêu đề</strong></td>
                                            <td>@record.Title</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Thể loại</strong></td>
                                            <td>@record.Genre</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Thời lượng</strong></td>
                                            <td>@record.Duration phút</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Ngày phát hành</strong></td>
                                            <td>@record.ReleaseDate?.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Trạng thái</strong></td>
                                            <td>@record.Status</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Đạo diễn</strong></td>
                                            <td>@record.Director</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Diễn viên</strong></td>
                                            <td>@record.Actors</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Mô tả</strong></td>
                                            <td>@record.Description</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn film-list-btn-secondary" data-bs-dismiss="modal"><i class="fas fa-times me-1"></i>Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "searching": false,
                "lengthMenu": [[5, 10, 15, 20], [5, 10, 15, 20]],
                "pageLength": 10,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Vietnamese.json",
                    "info": "",
                    "paginate": {
                        "previous": "Trước",
                        "next": "Tiếp"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": [5] }
                ],
                "dom": '<"top"lf>rt<"bottom"p><"clear">',
                "initComplete": function() {
                    $('.dataTables_filter input').addClass('form-control bg-dark text-light').attr('placeholder', 'Tìm kiếm...');
                    $('.dataTables_length').prependTo('#dataTable_wrapper .top');
                }
            });

            $('#filmListToggleSidebar').click(function () {
                $('#filmListSidebar').addClass('collapsed');
                $('#filmListMainContent').addClass('expanded');
                $('#filmListShowSidebar').show();
                $(this).hide();
            });

            $('#filmListShowSidebar').click(function () {
                $('#filmListSidebar').removeClass('collapsed');
                $('#filmListMainContent').removeClass('expanded');
                $('#filmListShowSidebar').hide();
                $('#filmListToggleSidebar').show();
            });
        });
    </script>
</body>
</html>