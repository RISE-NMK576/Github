                function applyFilters() {
            // Lọc theo cột
            table.column(1).search($('#filterTitle').val()); // Cột Tên phim (index 1)
            table.column(2).search($('#filterGenre').val()); // Cột Thể loại (index 2)
            table.column(5).search($('#filterStatus').val()); // Cột Trạng thái (index 5)
            table.column(6).search($('#filterRating').val()); // Cột Độ tuổi (index 6)

            // Lọc theo năm phát hành (custom)
            var yearFilter = $('#filterYear').val();
            if (yearFilter) {
                $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                    var releaseDate = data[4]; // Cột Ngày phát hành (index 4)
                    if (!releaseDate) return false;

                    // Extract year from date string (format: dd/MM/yyyy)
                    var dateParts = releaseDate.split('/');
                    if (dateParts.length !== 3) return false;

                    var year = dateParts[2];
                    return year === yearFilter;
                });
            }

            // Lọc thời lượng (custom)
            var durationFilter = $('#filterDuration').val();
            if (durationFilter) {
                $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                    var durationText = data[3]; // Cột Giá (index 3) - Cần kiểm tra lại
                    var duration = parseFloat(durationText) || 0;
                    var range = durationFilter.split('-');

                    if (range.length === 1) {
                        if (range[0] === "120") return duration > 120;
                    } else {
                        var min = parseFloat(range[0]);
                        var max = parseFloat(range[1]);
                        return duration >= min && duration <= max;
                    }
                    return true;
                });
            }

            // Lọc giá (custom)
            var priceFilter = $('#filterPrice').val();
            if (priceFilter) {
                $.fn.dataTable.ext.search.push(function(settings, data, dataIndex) {
                    var priceText = data[3].replace(/\./g, ''); // Cột Giá (index 3)
                    var price = parseFloat(priceText) || 0;
                    var range = priceFilter.split('-');

                    if (range.length === 1) {
                        if (range[0] === "0") return price === 0;
                        if (range[0] === "100000") return price > 100000;
                    } else {
                        var min = parseFloat(range[0]);
                        var max = parseFloat(range[1]);
                        return price >= min && price <= max;
                    }
                    return true;
                });
            }

            table.draw();

            // Xóa các hàm filter custom sau khi áp dụng
            $.fn.dataTable.ext.search.pop();
            $.fn.dataTable.ext.search.pop();
            $.fn.dataTable.ext.search.pop();
        }
    });

    // Các hàm xử lý modal
    function showDetailModal(id, title, releaseDate, genre, description, price, filmURL, img, duration, director, actors, rating, ratingValue) {
        $('#detailTitle').text(title);
        $('#detailRelease').text(releaseDate || 'N/A');
        $('#detailGenre').text(genre || 'N/A');
        $('#detailDuration').text(duration || 'N/A');
        $('#detailDirector').text(director || 'N/A');
        $('#detailDescription').text(description || 'Không có mô tả');

        // Format giá tiền với đơn vị VND
        const priceValue = parseFloat(price);
        $('#detailPrice').text(!isNaN(priceValue) ?
            priceValue.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) : 'N/A');

        $('#detailFilmURL').attr('href', filmURL || '#');
        $('#detailActors').text(actors || 'N/A');
        $('#detailImg').attr('src', img || 'https://via.placeholder.com/300x450?text=No+Poster');
        $('#detailRating').text(rating ? rating + '/10' : 'N/A');

        var ratingValueBadge = $('#detailRatingValue');
        ratingValueBadge.removeClass().addClass('badge');
        if (ratingValue === 'P') {
            ratingValueBadge.addClass('bg-success').text('P - Mọi lứa tuổi');
        } else if (ratingValue === 'C13') {
            ratingValueBadge.addClass('bg-primary').text('C13 - Trên 13 tuổi');
        } else if (ratingValue === 'C16') {
            ratingValueBadge.addClass('bg-warning').text('C16 - Trên 16 tuổi');
        } else if (ratingValue === 'C18') {
            ratingValueBadge.addClass('bg-danger').text('C18 - Trên 18 tuổi');
        } else {
            ratingValueBadge.addClass('bg-secondary').text('N/A');
        }

        var detailModal = new bootstrap.Modal(document.getElementById('detailModal'));
        detailModal.show();
    }

    function showEditModal(id, title, genre, duration, releaseDate, status, ratingValue, director, posterUrl, actors, description, trailerUrl, price, filmURL) {
        $('#editId').val(id);
        $('#editTitle').val(title || '');
        $('#editGenre').val(genre || '');
        $('#editDuration').val(duration || '');
        $('#editReleaseDate').val(releaseDate || '');
        $('#editStatus').val(status || 'DangChieu');
        $('#editRatingValue').val(ratingValue || 'P');
        $('#editDirector').val(director || '');
        $('#editPosterUrl').val(posterUrl || '');
        $('#editActors').val(actors || '');
        $('#editDescription').val(description || '');
        $('#editTrailerUrl').val(trailerUrl || '');

        // Xử lý giá tiền
        const priceValue = parseFloat(price);
        $('#editPrice').val(!isNaN(priceValue) ? priceValue : '0');

        $('#editFilmURL').val(filmURL || '');
        $('#editModalTitle').text(title || 'Chỉnh sửa phim');

        var editModal = new bootstrap.Modal(document.getElementById('editModal'));
        editModal.show();
    }

    function confirmDelete(id, title) {
        $('#filmIdToDelete').val(id);
        $('#filmTitleToDelete').text(title);
        $('#deleteForm').attr('action', '/FilmController1/Delete/' + id);

        var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }

    // Xử lý submit form edit
    $('#editForm').submit(function(e) {
        e.preventDefault();

        $.ajax({
            url: $(this).attr('action'),
            type: 'POST',
            data: $(this).serialize(),
            success: function(response) {
                if (response.success) {
                    alert('Cập nhật phim thành công!');
                    $('#editModal').modal('hide');
                    location.reload();
                } else {
                    if (response.errors) {
                        let errorMessages = '';
                        for (const [key, value] of Object.entries(response.errors)) {
                            errorMessages += `${value.join(', ')}\n`;
                        }
                        alert('Lỗi validation:\n' + errorMessages);
                    } else {
                        alert('Có lỗi xảy ra khi cập nhật phim: ' + (response.message || ''));
                    }
                }
            },
            error: function(xhr) {
                alert('Có lỗi xảy ra khi gửi yêu cầu: ' + xhr.responseText);
            }
        });
    });

    // Xử lý submit form delete
    $('#deleteForm').submit(function(e) {
        e.preventDefault();

        $.ajax({
            url: $(this).attr('action'),
            type: 'POST',
            data: $(this).serialize(),
            success: function(response) {
                if (response.success) {
                    alert('Xóa phim thành công!');
                    $('#deleteModal').modal('hide');
                    location.reload();
                } else {
                    alert('Có lỗi xảy ra khi xóa phim: ' + (response.message || ''));
                }
            },
            error: function(xhr) {
                alert('Có lỗi xảy ra khi gửi yêu cầu xóa: ' + xhr.responseText);
            }
        });
    });
